-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

= form_for @inquiry, :url => inquiry_confirm_path do |f|
  .contact-title.col-12
    %h1 Contact

  .wrapper.col-12{ style: 'width: 600px;' }
    - if @inquiry.errors.any?
      %p 入力内容に誤りがあります。
      %ul
        = @inquiry.errors.each do |attr, msg|
          %li
            = msg

    %table.contact-form.col-12
      %tr.col-12
        %th 名前
        %td= f.text_field :name
      %tr.col-12
        %th メールアドレス
        %td= f.text_field :email
      %tr.col-12
        %th お問い合わせ内容
        %td= f.text_area :message

  = f.submit '確認', class: 'btn btn-primary submit-btn col-4'

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'