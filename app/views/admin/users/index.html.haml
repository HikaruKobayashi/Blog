-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

.container
  .row
    %body.col-12
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th ユーザー名
            %th メールアドレス
            %th
        %tbody
        - @user.each do |user|
          %tr
            %th= user.name
            %td= user.email
            %td
              = link_to "/admin/users/#{user.id}/destroy", {method: "user"} do
                %button 削除

-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'

