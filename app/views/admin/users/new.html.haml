-# ----------------------------
-# header
-# ----------------------------
= render 'layouts/header'

%h2.top-title New administrator registration
= form_with model: [:admin, @user], local: true do |f|
  .wrapper.col-12{ style: 'width: 550px;' }
    .form-group
      = f.label :name, 'Name', class: 'contact-text'
      = f.text_field :name, class: 'text-box'
    .form-group
      = f.label :email, 'E-mail', class: 'contact-text'
      = f.text_field :email, class: 'text-box'
    .form-group
      = f.label :password, 'Password', class: 'contact-text'
      = f.password_field  :password, id: :user_password, class: 'form_txt text-box', placeholder: 'Password'
      = f.password_field :password_confirmation, id: :user_password_confirmation, class: 'form_txt text-box', placeholder: 'Password（confirm）'
    .col-12.login-btn
      = f.submit 'Create', class: 'btn btn-dark submit-btn'


-# ----------------------------
-# footer
-# ----------------------------
= render 'layouts/footer'